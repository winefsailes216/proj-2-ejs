         crossorigin="anonymous"
      ></script>
      <title><%=header%></title>
   </head>

   <body class="container border-start border-end border-bottom">
      <%- include('../public/partials/nav.ejs') %>
      <div class="row border-bottom mb-3">
         <%- include('../public/partials/sidebar.ejs') %>

         <div class="col-9 border-start">
            <h1><%=header%></h1>
            <a href="/car-details" class="btn btn-dark mb-2 mt-2">Backâ¬…</a>
            <hr />
            <div class="container">
               <div class="row">
                  <div class="col-6">
                     
                     <p class="fs-3 fw-bold">
                        Vehicle:<span class="text-warning">
                           <%= records.vehicle%>
                        </span>
                     </p>
                     <p class="fs-3 fw-bold">
                        Model:<span class="text-warning">
                           <%= records.make_model %>
                        </span>
                     </p>
                     <p class="fs-3 fw-bold">
                        Year:
                        <span class="text-warning"><%= records.year %></span>
                     </p>
                     <p class="fs-3 fw-bold">
                        Description:
                        <span class="text-warning">
                           <%= records.description%></span
                        >
                     </p>
                     <p class="fs-3 fw-bold">
                        Records:
                        <span class="text-warning"><%= records.status%></span>
                     </p>
                  </div>
                  <div class="col-md">
                     <img
                        alt="picture"
                        class="img-fluid rounded"
                        src="http://localhost:3000/static/img/1.jpg"
                     />
                  </div>
               </div>
               <div class="col-md">
                  <p class="fs-3 fw-bold">Performance Graph:</p>
                  <img
                     alt="picture"
                     class="img-fluid"
                     src="http://localhost:3000/static/img/graph.jpg"
                  />
               </div>
            </div>
         </div>
         <div class="col-12">
            <%- include('../public/partials/footer.ejs') %>
         </div>
      </div>

      <script
         src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
         integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
         crossorigin="anonymous"
      ></script>
